{
    "name": "Codespace for skills",
    "image": "mcr.microsoft.com/vscode/devcontainers/universal:latest",
    "remoteUser": "codespace",
    "overrideCommand": false,
    "customizations":{
        "vscode":{
            "extensions":[
                "Github.copilot"
            ]
        },
        "codespaces":{
            "openFiles":[
                "codespace.md"
            ]
        }
    },
    "postCreateCommand": "echo '# Codespace for skills' > codespace.md"
}
